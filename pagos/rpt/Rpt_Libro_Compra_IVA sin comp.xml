				<COL TYPE="EXPRESSION" ALIGN="LEFT" CELLCLASS="DOCUMENT_LAYER" TEXTCLASS="MEDIA" COLSPAN="2">$this->getValue("nombre")</COL>
                
				<COL TEXTCLASS="MEDIA" COLSPAN="1"  ALIGN="LEFT" TYPE="EXPRESSION">($this->getValue("tipo_documento")=="01"?$this->getValue("nro_documento"):"")</COL>
				<COL TEXTCLASS="MEDIA" TYPE="FIELD">nro_con_documento</COL>
				<COL TEXTCLASS="MEDIA" COLSPAN="1"  ALIGN="LEFT" TYPE="EXPRESSION">($this->getValue("tipo_documento")=="02"?$this->getValue("nro_documento"):"")</COL>
				<COL TEXTCLASS="MEDIA" COLSPAN="1"  ALIGN="LEFT" TYPE="EXPRESSION">($this->getValue("tipo_documento")=="03"?$this->getValue("nro_documento"):"")</COL>
				
				<COL TEXTCLASS="MEDIA" TYPE="FIELD">tipo_transaccion</COL>	
            	<COL TEXTCLASS="MEDIA" TYPE="FIELD">nro_doc_afectado</COL>
				<COL TEXTCLASS="MEDIA" ALIGN="RIGHT" NUMBERFORMATEX="2" TYPE="FIELD">monto_documento</COL>
				<COL TEXTCLASS="MEDIA" ALIGN="RIGHT" NUMBERFORMATEX="2" TYPE="FIELD">monto_exento_iva</COL>
				<COL TEXTCLASS="MEDIA" ALIGN="RIGHT" NUMBERFORMATEX="2" TYPE="FIELD">base_imponible</COL>
				<COL TEXTCLASS="MEDIA" ALIGN="RIGHT" NUMBERFORMATEX="2" TYPE="FIELD">tasa_iva</COL>
				<COL TEXTCLASS="MEDIA" ALIGN="RIGHT" NUMBERFORMATEX="2" TYPE="FIELD">monto_iva</COL>
				<COL TEXTCLASS="MEDIA" ALIGN="RIGHT" NUMBERFORMATEX="2" TYPE="FIELD">monto_iva_retenido</COL>
				
			    
			  </ROW>
			</FIELDS>   
		  </GROUP>	
		</GROUP>
