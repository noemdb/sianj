   <GROUPS>
	<GROUP REPRINT_HEADER_ON_PAGEBREAK="TRUE" NAME="mes" EXPRESSION="mes_libro">
		   <HEADER>
   			 	<ROW>
				    <COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">Fecha</COL>
					<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">Rif</COL>
					
					<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="2" TYPE="EXPRESSION">Nombre</COL>
					<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">Numero Factura</COL>
		  			<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">Num Control Factura</COL>
		  			<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">Nro Nota Debito</COL>
		  			<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">Nro Nota Credito</COL>
					<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">Tipo Trans</COL>		  			
					<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">Numero Fact Afectada</COL>
		  			<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">Compras con IVA</COL>
		  			<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">Compras sin IVA</COL>
		  			<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">Base Imponible</COL>
		  			<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">% Alic.</COL>
		  			<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">Impuesto IVA</COL>
		  			<COL ALIGN="CENTER" TEXTCLASS="MEDIABOLD" COLSPAN="1" TYPE="REGULAR">IVA Retenido</COL>	
   				 </ROW>
           </HEADER>
		   <FOOTER>
             <ROW>
			 	<COL TYPE="EXPRESSION" NUMBERFORMATEX="2" CELLCLASS="HEADER" ALIGN="RIGHT" TEXTCLASS="BOLD" COLSPAN="10"></COL>
			 	<COL TYPE="EXPRESSION" NUMBERFORMATEX="2" CELLCLASS="HEADER" ALIGN="RIGHT" TEXTCLASS="BOLD" COLSPAN="1">$this->getSum("monto_documento")</COL> 
			 	<COL TYPE="EXPRESSION" NUMBERFORMATEX="2" CELLCLASS="HEADER" ALIGN="RIGHT" TEXTCLASS="BOLD" COLSPAN="1">$this->getSum("monto_exento_iva")</COL>
			 	<COL TYPE="EXPRESSION" NUMBERFORMATEX="2" CELLCLASS="HEADER" ALIGN="RIGHT" TEXTCLASS="BOLD" COLSPAN="1">$this->getSum("base_imponible")</COL>
			 	<COL TYPE="EXPRESSION" NUMBERFORMATEX="2" CELLCLASS="HEADER" ALIGN="RIGHT" TEXTCLASS="BOLD" COLSPAN="1"></COL>  
			 	<COL TYPE="EXPRESSION" NUMBERFORMATEX="2" CELLCLASS="HEADER" ALIGN="RIGHT" TEXTCLASS="BOLD" COLSPAN="1">$this->getSum("monto_iva")</COL>
			 	<COL TYPE="EXPRESSION" NUMBERFORMATEX="2" CELLCLASS="HEADER" ALIGN="RIGHT" TEXTCLASS="BOLD" COLSPAN="1">$this->getSum("monto_iva_retenido")</COL>
             </ROW>
			 
           </FOOTER>
